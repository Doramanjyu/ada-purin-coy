{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["@emotion/react/types/css-prop"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
